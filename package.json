{
  "name": "cookbook",
  "version": "1.0.0",
  "description": "A simple cookbook application",
  "scripts": {
    "prepare": "husky || true",
    "check-updates": "ncu -i -w",
    "browserslist-update": "npx update-browserslist-db@latest",
    "build": "npm run -w frontend build && npx -w backend prisma generate",
    "start": "npm run -w backend start"
  },
  "author": "lpgera",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "^25.0.0",
    "npm": ">11.0.0"
  },
  "volta": {
    "node": "25.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "npm-check-updates": "^19.1.1",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{ts,js,css,md,json,yml}": "prettier --write"
  }
}
