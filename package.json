{
  "name": "cookbook",
  "version": "1.0.0",
  "description": "A simple cookbook application",
  "scripts": {
    "prepare": "husky || true",
    "check-updates": "ncu -i -ws --root",
    "browserslist-update": "npx update-browserslist-db@latest",
    "build": "npm run -w frontend build && npx -w backend prisma generate",
    "start": "npm run -w backend start"
  },
  "author": "lpgera",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": "^22.0.0",
    "npm": ">10.0.0"
  },
  "volta": {
    "node": "22.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "npm-check-updates": "^17.0.5",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "*.{ts,js,css,md,json,yml}": "prettier --write"
  }
}
